{
  "name": "@xst/nestjs-kafka",
  "version": "0.0.2",
  "description": "KafkaJS integration with NestJS, cloned from @rob3000/nestjs-kafka@1.4.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "tsc --project tsconfig.build.json",
    "test": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "kafka:start": "docker-compose -f ./kafka/docker-compose.yml up -d",
    "kafka:stop": "docker-compose -f ./kafka/docker-compose.yml down -v",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concerttech/nestjs-kafka.git"
  },
  "keywords": [
    "nestjs",
    "kafkajs"
  ],
  "author": "Rob Shepherd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/concerttech/nestjs-kafka/issues"
  },
  "homepage": "https://github.com/concerttech/nestjs-kafka#readme",
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "@nestjs/common": "^9.3.9",
    "@nestjs/core": "^9.3.9",
    "@nestjs/microservices": "^9.3.9",
    "kafkajs": "^2.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@nestjs/testing": "^9.3.9",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-jest": "^29.4.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
